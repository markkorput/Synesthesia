*
  margin: 0
  padding: 0


body
    color: white
    font-family: sans-serif


p
    margin: 0.2em 0


p.small
    font-size: 0.8em


.numParticles
  position: absolute
  bottom: 10px
  left: 10px
  color: white
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.8)


.alive-wrapper
    position: absolute
    top: 2em
    width: 25em
    left: 50%
    margin-left: -12.5em   
    text-align: center
    padding: 1em
    background-color: rgba( 255, 255, 255, 0.15 )
    border-radius: 1em
    border: 1px solid rgba( 255, 255, 255, 0.3 )

.orient-global-target-control-view
  color: #000

.orient-global-target-control-view span#display
  display: inline-block
  text-align: right
  margin: 0 10px 0 20px
  width: 50px

#header li
  display:inline-block
  color: black
  font-weight: bold
  width: 100px

.orient-cms-view
  color: black

.orient-cms-item-view
  display: block
  background-color: white;
  padding: 5px
  margin-bottom: 10px
  width: 1210px

.orient-cms-item-view.global
  border-bottom: 2px solid black

.orient-cms-item-view.client.highlighted
  background-color: rgb(240, 240, 255)

.orient-cms-item-view .disabled
  background-color: red

.orient-cms-item-view .enabled
  background-color: green

.orient-cms-item-view p
  display: inline-block
  margin: 0
  overflow: hidden

.orient-cms-item-view p
  width: 100px

.orient-cms-item-view input
  display: block
  width: 80px
